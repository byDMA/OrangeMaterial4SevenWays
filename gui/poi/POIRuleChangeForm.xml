<gui>
	<!--Изменение правила фильтра POI-->

	<form id="POIRuleChangeForm" sourceId="GUIForm">
		<button sourceId="OKButton"/>
		<button sourceId="BackButton"/>
		<button text="$ChangeRule" sourceId="TitleButton" right="75pd"/>
        <button bgPics="orangeUnderline" left="0" right="0" top="35pd" />

		<group left="3pd" right="1pd" top="38pd" height="28pd">
			<button left="0" top="50%" width="40%" height="20pd" leftMargin="3pd"
				text="$ThisRule" fontSize="FontSize220" autoSize="text" textPosition="left;center" rtl="on"/>
			<button picNormal="cb_off;cb_on" right="0" top="0" width="59%" height="28pd" leftMargin="3pd" rightMargin="3pd" picPosition="right;center" textPosition="left;center" id="HideOrShowButton" bgColor="Color040"	text="[color=Color230]$RuleHides[/color]|[color=Color070]$RuleShows[/color]" fontSize="FontSize220" autosize="text" textPosition="left;center" />
            
            
		</group>
        <edit left="5pd" right="5pd" top="68pd" height="25pd" fontSize="FontSize220" id="KeywordsEdit" hint="$RuleKeywordsHint" bgPics="" />

		<button bgPics="greyUnderline" left="2pd" right="2pd" top="99pd" />
			
		<listContainer id="List" sourceId="POIList" left="1pd" right="1pd" top="100pd" bottom="1pd">
			<template id="Item">
				<label id="Label" text="%title" fontSize="FontSize220" top="50%"/>
			</template>
			<item sourceId="Item" bgPics=""/>
			<selectedItem sourceId="Item" bgPics=""/>
		</listContainer>

        <!--- zmiana ikony na more, bo linkuje do dialogu --->
		<button sourceId="Menu" right="35pd" picNormal="more" command="show(More)"/>
		<!--- дополнительное меню --->
		<dialog id="More" sourceId="MoreMenu" bgPics="greyFrame">
			<button sourceId="QuickMenuCaption" top="0pd" text="$Settings" bgPics="orangeUnderline" command="show(POIRuleChangeForm);show(POIRuleChangeForm);goBack" />
            <button id="MoreButton" sourceId="QuickMenuButton" top="30pd" text="$RuleParams" picNormal="settings_small" />
			<button id="DeleteButton" sourceId="QuickMenuButton" top="60pd" text="$Delete" picNormal="delete" command="goBack"/>
		</dialog>	

	</form>
</gui>
