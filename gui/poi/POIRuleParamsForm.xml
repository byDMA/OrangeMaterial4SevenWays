<gui>
	
	<!--Параметры правила фильтра POI-->

	<form id="POIRuleParamsForm" sourceId="GUIForm">
		<button text="$RuleParams" sourceId="TitleButton"/>
		<button sourceId="OKButton"/>
		<button sourceId="BackButton"/>
        <button bgPics="orangeUnderline" left="0" right="0" top="35pd" />
		
		<group sourceId="SettingsGroup">
			<!-- имя правила -->
			<group top="0pd" left="0" right="2pd" height="50pd" bgColor="Color020">
				<label left="3pd" right="3pd" top="5pd" text="$RuleTitle:"/>
				<edit id="TitleEdit" hint="$RuleTitle" left="3pd" leftMargin="4pd" top="23pd" right="3pd" height="20pd"/>
			</group>		
			<!-- правило для: -->
			<button text="$RuleMaps" fontSize="FontSize130" textPosition="left;center"
				left="0" leftMargin="3pd" right="2pd" top="55pd" height="20pd" bgColor="Color040" fontColor="Color210"/>			
			<!-- настройки правила -->
			<group left="0" right="2pd" top="75pd" width="120pd" bgColor="Color020">			
				<checkbox id="AutoModeCheck" sourceId="SettingsCheckBox" text="$MapModeAuto" top="0pd"/>
				<checkbox id="ManualModeCheck" sourceId="SettingsCheckBox" text="$MapModeManual" top="40pd"/>
				<checkbox id="SearchModeCheck" sourceId="SettingsCheckBoxWoLine" text="$MapModeSearch" top="80pd"/>
			</group>
		</group>

	</form>
</gui>
