<gui>
	
	<!--Поиск - Координаты | Eingabe von Koordinaten -->

	<form id="SearchCoordsForm" sourceId="GUIForm">
		<button sourceId="BackButton"/>
		<button text="$SearchCoordinates" sourceId="TitleButton"/>
		<button id="SearchCoordsButton" sourceId="ShowMapButton" command="ok"/>
        <button bgPics="orangeUnderline" left="0" right="0" top="35pd" />
		
        <group left="1pd" right="1pd" top="40pd">
			
            
            <edit id="LatitudeEdit" bgColor="Color210" bgColorDisabled="Color030" bgPics="" fontColor="Color030" fontColorDisabled="Color210" height="25pd" left="35pd" right="35pd" hint="LAT (φ) $Latitude">
                <button right="0pd" width="18pd" height="25pd" picNormal="clearedit" picPressed="clearedit_p" bgColor="Color010"/>
                <hint colorActive="Color031" colorInactive="Color230" fontSize="FontSize130" />
            </edit>
            <button left="0pd" width="35pd" height="25pd" top="0pd" picNormal="LAT" bgColor="Color010"/>
            
            <edit id="LongitudeEdit" bgColor="Color210" bgColorDisabled="Color030" bgPics="" fontColor="Color030" fontColorDisabled="Color210" top="30pd" height="25pd" left="35pd" right="35pd" hint="LON (λ) $Longitude">
                <button right="0pd" width="18pd" height="25pd" picNormal="clearedit" picPressed="clearedit_p" bgColor="Color010"/>
                <hint colorActive="Color031" colorInactive="Color230" fontSize="FontSize130" />
                
            </edit>
						
            <button left="0pd" width="35pd" height="25pd" top="30pd" picNormal="LON" bgColor="Color010"/>
            
            <button id="SwapCoordsButton" bgColor="Color040" bgColorPressed="Color041" picNormal="swap_coords" rtlPicture="1" right="1" picPosition="center;center" width="34pd" height="58pd"/>
		</group>
	</form>
</gui>
