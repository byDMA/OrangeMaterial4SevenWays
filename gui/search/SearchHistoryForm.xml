<gui>

	<!--Поиск - История | Suche: letzte Ziele-->

	<form id="SearchHistoryForm" sourceId="GUIForm">		
		<button sourceId="BackButton"/>
		<button id="ClearHistoryButton" sourceId="Menu" picNormal="del_all"/>
		<button bgPics="orangeUnderline" left="0" right="0" top="35pd" />
        
        <!-- Sucheingabe-->
        <button  left="35pd" width="18pd" height="18pd" top="9pd" picNormal="further_search_frameless" bgColor="Color210" bgPics=""/>
        <edit id="SearchHistoryEdit" top="9pd" height="18pd" left="53pd" right="35pd" bgPics="" fontSize="FontSize130" bgColor="Color210" bgColorDisabled="Color030" fontColor="Color030" fontColorDisabled="Color210" hint="$HistoryFilterHint">
			<button right="0pd" width="18pd" bgColor="Color010" picNormal="clearedit" picPressed="clearedit_p"/>
            <hint colorActive="Color210" colorInactive="Color230" fontSize="FontSize130" />
        </edit>	
        
        
        

		<listContainer id="SearchHistoryList" left="1pd" right="1pd" top="38pd" bottom="1pd">
		
			<item id="Exact" sourceId="LabelListItemGroup">
				<label id="Label"
						text="[size=FontSize220]%title, %city[/size][size=FontSize221]\n[color=Color070]%region, %country[/color][/size]"/>
			</item>
			
			<selectedItem id="Exact" sourceId="LabelListSelectedItemGroup">
				<label id="Label"
						text="[size=FontSize220]%title, %city[/size][size=FontSize221]\n[color=Color070]%region, %country[/color][/size]"/>
			</selectedItem>

			<item id="Near" sourceId="LabelListItemGroup">
				<label id="Label"
						text="[size=FontSize220]$CloseTo %title, %city[/size][size=FontSize221]\n[color=Color070]%region, %country[/color][/size]"/>
			</item>

			<selectedItem id="Near" sourceId="LabelListSelectedItemGroup">
				<label id="Label"
						text="[size=FontSize220]$CloseTo %title, %city[/size][size=FontSize221]\n[color=Color070]%region, %country[/color][/size]"/>
			</selectedItem>

			<item id="Far" sourceId="LabelListItemGroup">
				<label id="Label"
						text="[size=FontSize220]%distance $From %title, %city[/size][size=FontSize221]\n[color=Color070]%region, %country[/color][/size]"/>
			</item>

			<selectedItem id="Far" sourceId="LabelListSelectedItemGroup">
				<label id="Label"
						text="[size=FontSize220]%distance $From %title, %city[/size][size=FontSize221]\n[color=Color070]%region, %country[/color][/size]"/>
			</selectedItem>
            <!-- right="4pd" -> Schalter sind dicht beieinander, damit kein langer Text durchkommt -->
			<button id="Delete" sourceId="ListItemLargeButton" right="4pd"
					bgColorPressed="Color081" bgColor="Color082" picNormal="garbage"/>
		</listContainer>
		
	</form>
</gui>
