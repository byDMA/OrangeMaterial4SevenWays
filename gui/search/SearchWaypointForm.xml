<gui>

	<!--Поиск - Мои места Suche: Meine Ort-->

	<form id="SearchWaypointForm" sourceId="GUIForm">
		
		<button sourceId="BackButton"/>
		<button id="DeleteAllButton" sourceId="Menu" picNormal="del_all"/>
		<button bgPics="orangeUnderline" left="0" right="0" top="35pd" />
        
        <!--Suchfeld-->
        <button  left="35pd" width="18pd" height="18pd" top="9pd" picNormal="further_search_frameless" bgColor="Color210" bgPics=""/>
        <edit id="SearchWaypointEdit" top="9pd" height="18pd" left="53pd" right="35pd" bgPics="" fontSize="FontSize130" bgColor="Color210" bgColorDisabled="Color030" fontColor="Color030" fontColorDisabled="Color210" hint="$FilterHint">
			<button right="0pd" width="18pd" bgColor="Color010" picNormal="clearedit" picPressed="clearedit_p"/>
            <hint colorActive="Color210" colorInactive="Color230" fontSize="FontSize130" />
        </edit>
                      
		<!--Liste-->
		<listContainer id="SearchWaypointList" sourceId="POIList" left="1pd" right="1pd" top="38pd" bottom="1pd">
			
            
            <!-- right="4pd" + 32pd (Background) = 36pd -> Schalter sind dicht beieinander, damit kein langer Text durchkommt -->
			<button id="Edit" sourceId="ListItemLargeButton" right="36pd"
					bgColorPressed="Color081" bgColor="Color082" picNormal="change"/>
            <!-- right="4pd" -> Schalter sind dicht beieinander, damit kein langer Text durchkommt -->
            <button id="Delete" sourceId="ListItemLargeButton" right="4pd"
					bgColorPressed="Color081" bgColor="Color082" picNormal="garbage"/>
            
			
			<item>
				<label id="Label"
						text="[size=FontSize220]%title[/size][size=FontSize221]\n[color=Color070]%distance[/color] %text[/size]"/>
			</item>
			
			<selectedItem>
				<label id="Label"
						text="[size=FontSize220]%title[/size][size=FontSize221]\n[color=Color070]%distance[/color] %text[/size]"/>
			</selectedItem>
			
		</listContainer>
		
	</form>
</gui>
