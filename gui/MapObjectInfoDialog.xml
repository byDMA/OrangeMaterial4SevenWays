<gui>

	<!--Информация об объекте-->

	<dialog id="MapObjectInfoDialog" sourceId="FormDialog">
    
		<button id="EntryPointsButton" top="5pd" right="5pd" width="130pd" height="26pd" 
			bgColor="Color070" bgColorPressed="Color071" fontColor="Color210" fontColorDisabled="Color020"
			picPosition="right;top" textPosition="left;bottom" leftMargin="5pd" bottomMargin="3pd"
			picNormal="entry_point" picDisabled="entry_point_d" text="$EntryPointsButton" fontSize="FontSize110"/>
        <button bgPics="orangeUnderline" left="0" right="0" top="35pd" />
    
		<group left="1pd" right="1pd" top="38pd" bottom="1pd">
			<label id="MapObjectInfoLabel" leftMargin="5pd" rightMargin="5pd" topMargin="5pd" left="0" right="0" wordWrap="1"
					text='{"[b][size=FontSize220]%title\n[/size][/b]"}'
						 '[right][size=FontSize221]{"%street, %house\n"}'
						 '{"%address\n"}'
						 '{"%city\n"}'
						 '{"(%country, %region)\n"}[/size]\n'
						 '[size=FontSize221]{"[phone]%phone[/phone]\n"}'
						 '{"[phone]%mobile[/phone]\n"}'
						 '{"%fax\n"}'
						 '{"[email]%email[/email]\n"}'
						 '{"[url]%web[/url]\n"}'
						 '{"%time\n"}'
						 '%text[/size][/right]'/>
		</group>
		
	</dialog>
</gui>
