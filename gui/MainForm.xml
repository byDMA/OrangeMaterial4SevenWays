<gui>
		
	<!--Главное меню-->
	<form id="MainForm" sourceId="FormWithText">
		<button sourceId="TitleButton" text="$MainMenu" />
		<button sourceId="ShowMapButton"/>
		<button picNormal="i" left="1pd" top="1pd" width="34pd" height="34pd" command="show(AboutBox)"/>
        <button bgPics="orangeUnderline" left="0" right="0" top="35pd" />
				
		<group sourceId="MenuGroup">
			<menu size="2">
				<button sourceId="PicMenuSmallButton" text="$Search" picNormal="find" command="show(SearchForm)" bgPics="greyFrame"
                bgPicsPressed="orangeFrame"
                bgColor="Color020"
                bgColorPressed="Color020"
                bgColorDisabled="Color020"
                bgPicsDisabled="greyFrame" />
				<button sourceId="PicMenuSmallButton" text="$Addons" picNormal="addons" command="show(ContentForm)" bgPics="greyFrame"
                bgPicsPressed="orangeFrame"
                bgColor="Color020"
                bgColorPressed="Color020"
                bgColorDisabled="Color020"
                bgPicsDisabled="greyFrame" />
				<button sourceId="PicMenuSmallButton" text="$Settings" picNormal="settings" command="show(SettingsForm)" bgPics="greyFrame"
                bgPicsPressed="orangeFrame"
                bgColor="Color020"
                bgColorPressed="Color020"
                bgColorDisabled="Color020"
                bgPicsDisabled="greyFrame" />
				<button sourceId="PicMenuSmallButton" text="$Routes" picNormal="route" command="show(RouteListForm)" id="RoutesButton" bgPics="greyFrame"
                bgPicsPressed="orangeFrame"
                bgColor="Color020"
                bgColorPressed="Color020"
                bgColorDisabled="Color020"
                bgPicsDisabled="greyFrame" />
				<button sourceId="PicMenuSmallButton" text="$Computer" picNormal="computer" command="show(TrackComputerForm)" bgPics="greyFrame"
                bgPicsPressed="orangeFrame"
                bgColor="Color020"
                bgColorPressed="Color020"
                bgColorDisabled="Color020"
                bgPicsDisabled="greyFrame" />
				<button sourceId="PicMenuSmallButton" text="$Tracks" picNormal="tracks" command="show(TrackListForm)" bgPics="greyFrame"
                bgPicsPressed="orangeFrame"
                bgColor="Color020"
                bgColorPressed="Color020"
                bgColorDisabled="Color020"
                bgPicsDisabled="greyFrame" />
			</menu>
		</group>
		<!--кнопка "Свернуть"-->
		<ifnot os="iOS; RT">
            <!--кнопка "Свернуть"/minimieren przesuwamy do prawego dolnego rogu-->
            <button picNormal="hide" right="1pd" bottom="1pd" width="34pd" height="34pd" command="hideApp"/> 
            
	    </ifnot>  
        
		
		<!--кнопка "Выход"-->
		<ifnot os="iOS">
			<button picNormal="exit" left="1pd" bottom="1pd" width="34pd" height="34pd" command="exit"/>
		</ifnot>
        
        		
	</form>	
    	
</gui>
