<gui>

	<!--Дополнения - Покупки-->
	
	<form id="ProductsForm" sourceId="GUIForm">
		<button sourceId="BackButton"/>
		<button sourceId="ShowMapButton"/>
        <button bgPics="orangeUnderline" left="0" right="0" top="35pd" />
		<button text="$Products" sourceId="TitleButton" tags="!filter"/>
		<button text="$AllProducts" sourceId="TextButton" top="6pd" right="45pd" left="45pd" height="25pd" autoSize="text" command="show(ProductsForm)" tags="filter"/>

		<listContainer id="List" left="1pd" top="38pd" bottom="62pd" right="1pd">
			<template id="Item" height="100pd" >
				<label id="Label" left="2pd" right="2pd" fontSize="FontSize130" top="50%" wordWrap="1" text=
						"[b]%title\n"
						"[color=Color071]%price[/color]   [color=Color240]{'$SubsCanceled'(%canceled); '$PurchaseActive'(%active)}[/color][/b]\n"
						"%comment"/>
			</template>
			<item sourceId="LabelListItemGroup; Item"/>
			<selectedItem sourceId="LabelListSelectedItemGroup; Item">
				<label id="Label" text=
						"[b]%title\n"
						"[color=Color071]%price[/color]   [color=Color240]{'$SubsCanceled'(%canceled); '$PurchaseActive'(%active)}[/color][/b]\n"
						"%comment"/>
			</selectedItem>
		</listContainer>
		<label id="DownloadingLabel" sourceId="DownloadingLabel"/>
    
        <group left="3pd" right="3pd" bottom="3pd" height="28pd">
            <template id="Button" sourceId="TextButton" bgColor="Color070" bgColorPressed="Color071" fontSize="FontSize130" autosize="text" height="100%" width="49%" top="0"/>
                <button sourceId="Button" text="$RestorePurchases" right="0" command="restorePurchases"/>
                <button sourceId="Button" text="$ManageSubs" left="0" command="manageSubs"/>
        </group>
	
    </form>

</gui>
