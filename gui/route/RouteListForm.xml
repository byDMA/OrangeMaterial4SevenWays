<gui>

	<!-- Маршруты-->

	<form id="RouteListForm" sourceId="GUIForm">

		<button sourceId="BackButton"/>
		<button sourceId="ShowMapButton"/>
		<button sourceId="Menu" right="35pd" picNormal="more" command="show(MoreRouteListMenu)"/>
		<button text="$Routes" sourceId="TitleButton" right="70pd" />
        <button bgPics="orangeUnderline" left="0" right="0" top="35pd" />
        
		<listContainer id="List" sourceId="LabelList" left="1pd" right="1pd" top="38pd" bottom="1pd">

			<item leftMargin="0">
				<label id="Label" left="5pd" right="5pd"
						text="[size=FontSize220][color=Color070]%title[/color][/size][size=FontSize221]\n%description[/size]"/>
			</item>

			<selectedItem leftMargin="0">
				<label id="Label" left="5pd" right="5pd"
						text="[size=FontSize220][color=Color070]%title[/color][/size][size=FontSize221]\n%description[/size]"/>
			</selectedItem>

		</listContainer>
		
        <!--- дополнительное меню --->
		<dialog id="MoreRouteListMenu" sourceId="MoreMenu" bgPics="greyFrame">
			<button sourceId="QuickMenuCaption" top="0" text="$More" bgPics="orangeUnderline" command="show(RoutelistForm);show(RoutelistForm);goBack" />
			<button sourceId="QuickMenuButton" top="30pd" text="$CreateRoute" picNormal="plus_out" command="goBack;createRoute"/>
			<button sourceId="QuickMenuButton" top="60pd" text="$DeleteAll" picNormal="delete_all" command="goBack;deleteAll"/>
		</dialog>
        
        
	</form>
</gui>
