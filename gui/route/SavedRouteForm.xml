<gui>
	<!--Сохранить / загрузить маршрут-->

	<form id="SavedRouteForm" sourceId="GUIForm"  picStart="start_small" picGoal="goal_small" picFinish="finish_small"
			routeDescExact="%title, %city" routeDescNear="$CloseTo %title, %city" routeDescFar="%distance $From %title, %city">
		
        <button sourceId="BackButton"/>
		<button sourceId="Del" picNormal="del" command="delete" tags="fileName"/>
		<button sourceId="OKButton" tags="!fileName"/>
        <button bgPics="orangeUnderline" left="0" right="0" top="35pd" />
        
		<group left="37pd" right="37pd" top="4pd" height="28pd">
			
            <button id="SaveRouteButton" sourceId="TextButton" text="$Save"
                    left="0" top="0" height="100%" width="49%" autosize="text" fontSize="9" layout="hor" command="ok" tags="fileName"/>
            
            <button id="LoadRouteButton" sourceId="TextButton" text="$LoadRoute" 
                    right="0" top="0" height="100%" width="49%" autosize="text" fontSize="9" layout="hor" command="load" tags="fileName"/>
		    
		</group>

		
        <group left="15pd" right="15pd" top="38pd">
            
            <edit id="TitleEdit" left="0pd" right="0pd" top="0" height="20pd" hint="$TitleHint"/>
            <edit id="DescEdit" left="0pd" right="0pd" top="23pd" height="32pd" multiline="1" hint="$DescHint"/>
		
        </group>

			<listContainer id="List" left="1pd" right="1pd" top="95pd" bottom="1pd">

				<template id="RouteListItem">
					<button id="Picture" bgColor="Color040" left="0" width="32pd" height="32pd" layout="center"/>
					<label id="Label" left="36pd" right="2pd" fontSize="FontSize220" fontColor="Color200"/>
				</template>

				<item id="Exact" sourceId="ListItemGroup, RouteListItem">
					<label id="Label" text="%title\n[size=FontSize221][color=Color070]%city[/color][/size]" />
				</item>

				<item id="Near" sourceId="ListItemGroup, RouteListItem">
					<label id="Label" text="$CloseTo %title\n[size=FontSize221][color=Color070]%city[/color][/size]" />
				</item>

				<item id="Far" sourceId="ListItemGroup, RouteListItem">
					<label id="Label" text="%distance $From %title\n[size=FontSize221][color=Color070]%city[/color][/size]" />
				</item>

			</listContainer>

	</form>
</gui>
