<gui>
		<!-- шаблон строки в списках загрузки -->
		<template id="AddonListItem" height="60pd">
			<button id="Button" left="0" top="50%" picNormal="addon; addon_downloading; addon_downloading; addon_error; addon_ready; addon_update" state="%state"/>
			<label id="Label" ellipsisPos="right" left="28pd" right="0" top="50%"
					text="[size=FontSize220]%title[/size]\n[size=FontSize221]{'%address3'(%address4)}, {'%address2'(%address3)}, {'%address1'(%address2)}[/size]\n[size=FontSize221][color=Color220]%addonSize,[/color][color=Color220] %state[/color][/size]"/>
			<progressBar bottom="60%" right="10pd" left="28pd" height="3pd" value="%progress"
					bgPics="grey_pix;grey_pix;grey_pix;grey_pix;;grey_pix;grey_pix;grey_pix;grey_pix"
					bgPicsFull="grey_pix;grey_pix;grey_pix;grey_pix;green_pix;grey_pix;grey_pix;grey_pix;grey_pix"
                />
		</template>	
		
		<!-- шаблон выделенной строки в списках загрузки -->
		<template Id="AddonListItemSelect" sourceId="AddonListItem">
			<button id="Button" left="0" picNormal="addon; addon_downloading; addon_downloading; addon_error; addon_ready; addon_update" state="%state"/>
			<label id="Label"
					text="[size=FontSize220]%title[/size]\n[size=FontSize221]{'%address3'(%address4)}, {'%address2'(%address3)}, {'%address1'(%address2)}[/size]\n[size=FontSize221][color=Color220]%addonSize,[/color][color=Color220] %state[/color][/size]"/>
		</template>
</gui>
