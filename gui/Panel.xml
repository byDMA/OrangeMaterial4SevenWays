<gui>

	<!--- Панель с быстрыми кнопками --->
		
	<!--- текущее время --->
	<indicator sourceId="BaseTimeIndicator" left="0" top="0pd" width="50pd" height="26pd"
		leftMargin="3pd" topMargin="2pd" bottomMargin="2pd" autoSize="text" textPosition="center;center" command="show(DashboardForm2)"/>     
   
    <!--- С компасом --->
	<group left="50pd" right="0" top="0" height="26pd" tags="compass">
		
		<!--- Компас --->
		<indicator sourceId="CompassIndicator" top="0pd" left="2%" width="30pd" height="100%"/>
			
		<!--- Спутники нет / плох / есть --->
		<button id="MapGPSState" picNormal="gps_off; gps_off; gps_bad; gps_valid" top="0pd" left="18%" height="100%" state="%gpsState" command="show(GPSSettingsForm)"/>
	 
		<!--- Звук откл / вкл --->
		<checkBox id="QuickMenuMuteCheck" picNormal="" top="0pd" left="34%" height="100%" visible="0"/>
		<button id="QuickMenuMuteCheck1" picNormal="sound_d" top="0pd" left="34%" height="100%" command="toggleMuteSound" tags="!sound"/>
		<button id="QuickMenuMuteCheck2" picNormal="sound" top="0pd" left="34%" height="100%" command="toggleMuteSound" tags="sound"/>
		
		<!--- POI вкл/фильтр/откл --->
		<button id="QuickMenuDetailCheck" picNormal="poi_h; poi_f; poi_s" state="%poiViewMode" top="0pd" left="50%" height="100%" command="togglePOIViewMode"/>

		<!--- Запись трека вкл/откл--->
		<button id="QuickMenuTrackCheck3" picNormal="record_d; record" top="0pd" left="66%" height="100%" state="%WriteTrack" command="toggleWriteTrack"/>
		
		<!--- Добавить отметку --->
		<button picNormal="note" top="0" left="82%" height="100%" command="addWaypoint"/>
		
		<!--- Батарея --->
		<indicator id="BatteryIndicator" picNormal="battery_0; battery_40; battery_70; battery_100; battery_ch" state="%battery" left="98%" top="0pd" height="100%" command="show(TrackComputerForm)"/>
	</group>
	
	<!--- Без компаса --->
	<group left="50pd" right="0" top="0" height="26pd" tags="!compass">
		
		<!--- Спутники нет / плох / есть --->
		<button id="MapGPSState" picNormal="gps_off; gps_off; gps_bad; gps_valid" top="0pd" left="5%" height="100%" state="%gpsState" command="show(GPSSettingsForm)"/>
	 
		<!--- Звук откл / вкл --->
		<checkBox id="QuickMenuMuteCheck" picNormal="" top="0pd" left="23%" height="100%" visible="0"/>
		<button id="QuickMenuMuteCheck1" picNormal="sound_d" top="0pd" left="23%" height="100%" command="toggleMuteSound" tags="!sound"/>
		<button id="QuickMenuMuteCheck2" picNormal="sound" top="0pd" left="23%" height="100%" command="toggleMuteSound" tags="sound"/>
		
		<!--- POI вкл/фильтр/откл --->
		<button id="QuickMenuDetailCheck" picNormal="poi_h; poi_f; poi_s" state="%poiViewMode" top="0pd" left="41%" height="100%" command="togglePOIViewMode"/>

		<!--- Запись трека вкл/откл--->
		<button id="QuickMenuTrackCheck3" picNormal="record_d; record" top="0pd" left="59%" height="100%" state="%WriteTrack" command="toggleWriteTrack"/>
		
		<!--- Добавить отметку --->
		<button picNormal="note" top="0" left="77%" height="100%" command="addWaypoint"/>
		
		<!--- Батарея --->
		<indicator id="BatteryIndicator" picNormal="battery_0; battery_40; battery_70; battery_100; battery_ch" state="%battery" left="95%" top="0pd" height="100%" command="show(TrackComputerForm)"/>
	</group>
 
</gui>