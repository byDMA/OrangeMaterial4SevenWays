<gui>

	<!-- Настройки треков и трек-регистратора-->
	
	<form id="TrackSettingsForm" sourceId="GUIForm">
		<button sourceId="OKButton"/>
		<button sourceId="BackButton"/>
		<button text="$TrackSettings" sourceId="TitleButton"/>
        <button bgPics="orangeUnderline" left="0" right="0" top="35pd" />
		<group sourceId="SettingsGroup">
			<group left="0pd" right="1pd" top="0pd" bgColor="Color020">
				<!-- отображать на основной карте -->
				<checkbox id="ShowOnMainMapCheck" sourceId="SettingsCheckBox" text="$ShowTracksOnMainMap" top="0pd"/>
				<!-- отображать на поисковой карте -->
				<checkbox id="ShowOnSearchMapCheck" sourceId="SettingsCheckBox" text="$ShowTracksOnSearchMap" top="40pd"/>
				<!-- сглаживать треки -->
				<checkbox id="SmoothCheck" sourceId="SettingsCheckBox" text="$SmoothTracks" top="80pd"/>
				<!-- треки поверх маршрута -->
				<checkbox id="DrawOverRouteCheck" sourceId="SettingsCheckBox" text="$DrawOverRoute" top="120pd"/>
				<!-- записывать -->
				<checkBox id="WriteTrackCheck" sourceId="SettingsCheckBox" text="$WriteGPXTrack" top="160pd"/>
				<!-- порядок отображения треков -->
				<button sourceId="MenuLabelWoLine" text="$TrackMapShowOrder" top="200pd"/>
                
                
				<comboBox id="OrderCombo" width="40%" right="3pd" top="210pd" height="20pd">
					<dialog id="Dialog" sourceId="ListDialog">
						<button sourceId="TitleButton" text="$TrackMapShowOrder"/>
                        <button bgPics="orangeUnderline" left="0" right="0" top="35pd" />
					</dialog>
				</comboBox>
			</group>
			
			<button text="$TrackRecorderParams" fontSize="FontSize130" command="show(TrackRecorderHelp)" textPosition="left;center"
				left="0pd" leftMargin="3pd" right="25pd" top="245pd" height="20pd" bgColor="Color040" fontColor="Color210"/>
			
            <button picNormal="question" command="show(TrackRecorderHelp)" right="1pd" top="245pd" height="20pd" width="25pd" bgColor="Color040" fontColor="Color210"/>

            
            <!-- Настройки треков и трек-регистратора-->
            <group sourceId="TrackRecorderWriteShowParams" left="0pd" right="1pd" top="265pd" bgColor="Color020">
				<button   />
			</group>
		
		</group>
		
		<dialog id="TrackRecorderHelp" sourceId="HelpDialog" >
			<label id="Label" text="$TrackRecorderHelp"/>
		</dialog>
	</form>
</gui>
