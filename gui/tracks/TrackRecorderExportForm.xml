<gui>
	
	<!--Окна сохранения части трек-регистратора в виде gpx-файлов-->
		
	<form id="TrackRecorderExportForm" sourceId="GUIForm">
		<button sourceId="OKButton"/>
		<button sourceId="BackButton"/>
		<button text="$TrackRecorderExport" sourceId="TitleButton"/>
        <button bgPics="orangeUnderline" left="0" right="0" top="35pd" />

		<group left="1pd" right="1pd" top="38pd" bgColor="Color020">
			<!-- записывать в отдельные файлы -->
			<checkbox id="TrackPerFileCheck" sourceId="SettingsCheckBox" text="$ExportToMultipleFiles" top="0"/>
			<!-- имя трека -->
			<button sourceId="MenuLabel" text="$TrackName" top="35pd" bgPics=""/>
            <button sourceId="MenuLabel" left="2pd" picNormal="file_label" top="60pd" width="20pd"/>
			
            <edit id="FileNameEdit" left="23pd" fontSize="10" width="50%" right="3pd" top="70pd" height="20pd"/>
			
            <!-- экспорт с даты -->
			<button sourceId="MenuLabel" text="$ExportFromDate" top="100pd"/>
			<comboBox id="FromCombo" width="50%" right="5pd" top="110pd" height="20pd">
				<dialog id="Dialog" sourceId="ListDialog">
					<button sourceId="TitleButton" text="$ExportFromDate"/>
				</dialog>
			</comboBox>
			<!-- экспорт по дату -->
			<button sourceId="MenuLabelWoLine" text="$ExportToDate" top="140pd"/>
			<comboBox id="ToCombo" width="50%" right="5pd" top="150pd" height="20pd">
				<dialog id="Dialog" sourceId="ListDialog">
					<button sourceId="TitleButton" text="$ExportToDate"/>
				</dialog>
			</comboBox>
		</group>
	</form>
</gui>
