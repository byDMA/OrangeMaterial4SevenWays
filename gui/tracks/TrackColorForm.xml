<gui>

	<!-- Настройка цвета трека -->
	
	<form id="TrackColorForm" sourceId="GUIForm">
		<button sourceId="OKButton"/>
		<button sourceId="BackButton"/>
		<button text="$TrackColorSettings" sourceId="TitleButton"/>
        <button bgPics="orangeUnderline" left="0" right="0" top="35pd" />

		<group left="1pd" right="1pd" top="38pd" bottom="1pd" bgColor="Color020">
			<!-- Цвет по-умолчанию -->			
			<checkbox id="DefaultColorCheckBox" sourceId="SettingsCheckBoxWoLine" text="$UseDefaultColor" top="0"/>
			<!-- Задание цвета вручкую-->
			<indicator id="TrackColorIndicator" picTrack="color_track_indicator" picArrow="way_track_indicator" left="3pd" top="40pd" width="75pd" height="25pd"
					bgPics=";;;;map_layer;;;;"/>
			<edit id="ColorEdit" hint="#000000" right="3pd" top="40pd" height="25pd" left="80pd"/>
			<!-- Предустановленные цвета-->
			<label text="$PresetTrackColors:" left="3pd" right="3pd" top="68pd" height="20pd" autoSize="0"/>
			<listContainer id="List" left="3pd" right="3pd" top="85pd" bottom="0">
				<template id="Item" width="75pd" height="30pd">
					<indicator id="TrackColorIndicator" picTrack="color_track_indicator" picArrow="way_track_indicator" width="75pd" height="30pd" left="50%" top="50%"/>
				</template>
				<item sourceId="Item"/>
				<selectedItem sourceId="Item"/>
			</listContainer>
		</group>
	</form>
</gui>
