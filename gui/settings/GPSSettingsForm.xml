<gui>
	<!--Опции - Спутники (Настройки оборудования)-->
	
	<form id="GPSSettingsForm" sourceId="GUIForm" >
		<button sourceId="BackButton"/>
		<button text="$GPSSettings" sourceId="TitleButton"/>
		<button sourceId="OKButton"/>
        <button bgPics="orangeUnderline" left="0" right="0" top="35pd" />
		
		<group sourceId="SettingsGroup">
		
			<ifnot os="Android; iOS; Tizen; RT">
				
				<group top="0" left="0pd" right="1pd" bgColor="Color020">
					<checkBox id="UseGPSCheck" sourceId="SettingsCheckBox" text="$UseGPS"/>
					<button id="AutoConfigureButton" sourceId="SettingsButtonWoLine" picNormal="autoconfig_gps" text="$AutoConfigure" top="40pd" left="50%"/>		
				</group>
				
				<group  height="80pd" right="1pd" top="85pd" left="0pd" bgColor="Color020">					
					<indicator sourceId="SatellitesIndicator" left="3pd" right="3pd" top="5pd" bottom="22pd" />
					<label id="StateLabel" bottom="5pd" left="50%"/>
				</group>

				<group height="97pd" top="170pd" left="0pd" right="1pd" bgColor="Color020">					
					<checkBox id="UseGPSAPICheck" text="$UsePort" top="0" left="3pd" right="0"
							picPosition="right;center" rtl="on" picUnchecked="cb_on" picChecked="cb_off" autoSize="enlarge"/>
					<label id="PortNumberLabel"/>
					<edit id="PortNumberEdit" left="3pd" top="40pd" height="20pd" right="3pd">
						<hint text="$Port" colorActive="Color231" colorInactive="Color230"/>
					</edit>
					<label id="PortSpeedLabel"/>
					<edit id="PortSpeedEdit" left="3pd" top="70pd" height="20pd" right="3pd">
						<hint text="$PortSpeed" colorActive="Color231" colorInactive="Color230"/>
					</edit>
				</group>

				<group height="49pd" top="272pd" left="0pd" right="1pd" bgColor="Color020">
					<label text="$BgLocationMode" top="7pd" left="3pd"/>
					<comboBox id="BgLocationModeCombo" left="3pd" height="20pd" top="22pd" right="3pd"
							leftMargin="3pd">
						<dialog sourceId="ListDialog">
							<button sourceId="TitleButton" text="$BgLocationMode"/>
                            <button bgPics="orangeUnderline" left="0" right="0" top="35pd" />
						</dialog>
					</comboBox>
				</group>
				
				<group top="326pd" left="0pd" right="1pd" bgColor="Color020">
					<checkBox id="AdjustSystemTimeCheck" sourceId="SettingsCheckBox" text="$AdjustTime" top="0" />
					<checkBox id="SendToServerCheck" sourceId="SettingsCheckBox" text="$SendTrafficToServer" top="40pd"/>
					<checkBox id="WriteGPSLog" sourceId="SettingsCheckBoxWoLine" text="$WriteGPSLog" top="80pd"/>
				</group>
				
			</ifnot>

			<if os="Android">
				
				<group height="120pd" top="0" left="0pd" right="1pd" bgColor="Color020">
					<checkBox id="UseGPSCheck" sourceId="SettingsCheckBox" text="$UseGPS" top="0pd"/>
					<checkBox id="UseCompassCheck" sourceId="SettingsCheckBox" text="$UseCompass" top="40pd"/>
					<checkBox id="UseNetworkCheck" sourceId="SettingsCheckBoxWoLine" text="$UseNetwork" top="80pd"/>
				</group>
				
				<group  height="80pd" right="1pd" top="125pd" left="0pd" bgColor="Color020">
					<indicator sourceId="SatellitesIndicator" left="3pd" right="3pd" top="5pd" bottom="22pd" />
					<label id="StateLabel" bottom="5pd" left="50%"/>
				</group>				

				<group height="49pd" top="210pd" left="0pd" right="1pd" bgColor="Color020">
					<label text="$BgLocationMode" top="7pd" left="3pd"/>
					<comboBox id="BgLocationModeCombo" left="3pd" height="20pd" top="22pd" right="3pd"
							leftMargin="3pd">
						<dialog sourceId="ListDialog">
							<button sourceId="TitleButton" text="$BgLocationMode"/>
                            <button bgPics="orangeUnderline" left="0" right="0" top="35pd" />
						</dialog>
					</comboBox>
				</group>				
			
				<group top="264pd" left="0pd" right="1pd" bgColor="Color020">
					<checkBox id="AdjustSystemTimeCheck" sourceId="SettingsCheckBox" text="$AdjustTime"/>
					<checkBox id="SendToServerCheck" sourceId="SettingsCheckBox" text="$SendTrafficToServer" top="40pd"/>
					<checkBox id="WriteGPSLog" sourceId="SettingsCheckBoxWoLine" text="$WriteGPSLog" top="80pd"/>				
				</group>

			</if>

			<if os="iOS; Tizen">
					
				<group height="120pd" top="0" left="0pd" right="1pd" bgColor="Color020">	
					<checkBox id="UseGPSCheck" sourceId="SettingsCheckBox" text="$UseGPS" top="0pd"/>
					<checkBox id="UseNetworkCheck" sourceId="SettingsCheckBox" text="$UseNetwork" top="40pd"/>
					<checkBox id="UseCompassCheck" sourceId="SettingsCheckBoxWoLine" text="$UseCompass" top="80pd"/>
				</group>
			
				<group  height="80pd" right="1pd" top="125pd" left="0pd" bgColor="Color020">
					<indicator sourceId="SatellitesIndicator" left="3pd" right="3pd" top="5pd" bottom="22pd" />
					<label id="StateLabel" bottom="5pd" left="50%"/>
				</group>
				
				<group height="49pd" top="210pd" left="0pd" right="1pd" bgColor="Color020">
					<label text="$BgLocationMode" top="7pd" left="3pd"/>
					<comboBox id="BgLocationModeCombo" left="3pd" height="20pd" top="22pd" right="3pd"
							leftMargin="3pd">
						<dialog sourceId="ListDialog">
							<button sourceId="TitleButton" text="$BgLocationMode"/>
                            <button bgPics="orangeUnderline" left="0" right="0" top="35pd" />
						</dialog>
					</comboBox>
				</group>

				<group top="264pd" left="0pd" right="1pd" bgColor="Color020">
					<checkBox id="SendToServerCheck" sourceId="SettingsCheckBox" text="$SendTrafficToServer" top="0"/>
					<checkBox id="WriteGPSLog" sourceId="SettingsCheckBoxWoLine" text="$WriteGPSLog" top="40pd"/>				
				</group>
			
			</if>
			
			<if os="RT">
				
				<group height="80pd" top="0" left="0pd" right="1pd" bgColor="Color020">
					<checkBox id="UseGPSCheck" sourceId="SettingsCheckBox" text="$UseGPS" top="0"/>
					<checkBox id="UseCompassCheck" sourceId="SettingsCheckBoxWoLine" text="$UseCompass" top="40pd"/>
				</group>
				
				<group  height="15pd" width="100%" bgColor="Color020" top="85pd" left="0pd" right="1pd">
					<label id="StateLabel" bottom="5pd" left="50%"/>
				</group>

				<group top="105pd" left="0pd" right="1pd" bgColor="Color020">
					<checkBox id="SendToServerCheck" sourceId="SettingsCheckBox" text="$SendTrafficToServer" top="0"/>
					<checkBox id="WriteGPSLog" sourceId="SettingsCheckBoxWoLine" text="$WriteGPSLog" top="40pd"/>
				</group>
			</if>
			
		</group>

	</form>
</gui>
