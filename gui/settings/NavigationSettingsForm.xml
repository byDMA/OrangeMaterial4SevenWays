<gui>
	<!--Опции - Навигация-->

	<form id="NavigationSettingsForm" sourceId="GUIForm">
		<button sourceId="BackButton"/>
		<button text="$NavigationSettings" sourceId="TitleButton"/>
		<button sourceId="OKButton"/>
        <button bgPics="orangeUnderline" left="0" right="0" top="35pd" />

		<group sourceId="SettingsGroup">
			<group top="0pd" left="0" right="2pd" bgColor="Color020">
				<checkBox id="AvoidUnpavedCheck"      	sourceId="SettingsCheckBox" 		text="$AvoidUnpaved" 									top="0"/>
				<checkBox id="AvoidUTurnsCheck"       	sourceId="SettingsCheckBox" 		text="$AvoidUTurns" 									top="40pd"/>
				<checkBox id="AvoidTollCheck"           sourceId="SettingsCheckBox" 		text="$AvoidToll" picNormal="subscribe"               	top="80pd"/>
				<checkBox id="TruckModeCheck"           sourceId="SettingsCheckBox" 		text="$ConsiderTruckBans" picNormal="subscribe"         top="120pd"/>
				<checkBox id="ShowEntireRouteCheck"   	sourceId="SettingsCheckBox" 		text="$ShowEntireRouteSettings" 						top="160pd"/>
				<checkBox id="ShowCompassCheck"  	  	sourceId="SettingsCheckBox" 		text="$ShowCompass" 									top="200pd"/>
				<checkBox id="EntryPointCheck" 		  	sourceId="SettingsCheckBoxWoLine"   text="$AutoSelectEntryPoint" 							top="240pd"/>				
			</group>
			
			<!-- звук при превышении-->
			<group top="284pd" left="0" right="2pd" bgColor="Color020">
				<checkBox id="SpeedingSoundCheck" sourceId="SettingsCheckBoxWoLine" text="$SpeedingSound" top="0pd"/>			
				<button sourceId="MenuLabelWoLine" text="$SpeedingThreshold" top="30pd" rightMargin="80pd"/>
				<edit id="SpeedingThresholdEdit" leftMargin="4pd" top="60pd" right="3pd" left="4pd" height="20pd"/>
			</group>			
			
            <!-- показывать текущее ограничение-->
			<group top="378pd" left="0" right="2pd" height="135pd" bgColor="Color020">
				<label text="$ShowSpeedLimitIndicator" left="3pd" right="3pd" top="5pd"/>	
				<comboBox id="SpeedLimitIndicatorCombo" top="20pd" left="3pd" right="3pd" height="20pd">
					<dialog sourceId="ListDialog">
						<button sourceId="TitleButton" text="$ShowSpeedLimitIndicator"/>
                        <button bgPics="orangeUnderline" left="0" right="0" top="35pd" />
					</dialog>
				</comboBox>
				<!-- показывать изменение ограничения-->
				<label text="$ShowSpeedLimitChangeIndicator" left="3pd" right="3pd" top="50pd"/>
				<comboBox id="LimitChangeIndicatorCombo" top="65pd" left="3pd" right="3pd" height="20pd">
					<dialog sourceId="ListDialog">
						<button sourceId="TitleButton" text="$ShowSpeedLimitChangeIndicator"/>
                        <button bgPics="orangeUnderline" left="0" right="0" top="35pd" />
					</dialog>
				</comboBox>				
				<!-- звук об изменении-->
				<label text="$SpeedLimitChangeSound" left="3pd" right="3pd" top="95pd"/>
				<comboBox id="LimitChangeSoundCombo" top="110pd" left="3pd" right="3pd" height="20pd">
					<dialog sourceId="ListDialog">
						<button sourceId="TitleButton" text="$SpeedLimitChangeSound"/>
                        <button bgPics="orangeUnderline" left="0" right="0" top="35pd" />
					</dialog>
				</comboBox>	
			</group>
			
			<!-- полосы движения -->
			<group top="517pd" left="0" right="2pd" height="95pd" bgColor="Color020">
				<checkBox id="ShowLanesCheck" top="0pd" sourceId="SettingsCheckBoxWoLine" text="$LanesGroup"/>				
				<label text="$LanesDistance" top="35pd" left="3pd" rightMargin="80pd"/>
				<edit id="LanesDistanceEdit" leftMargin="4pd" top="50pd" right="3pd" left="3pd" height="20pd"/>				
			</group>			
			
			<!-- второй маневр -->			
			<group top="587pd" left="0" right="2pd" height="120pd" bgColor="Color020">
				<checkBox id="ShowSecondTurnCheck" top="0pd" sourceId="SettingsCheckBoxWoLine" text="$SecondTurn"/>	
				
				<label left="3pd" right="3pd" top="35pd" text="$SecondTurnDistBeforeFirst"/>
				<edit id="SecondTurnDistBeforeFirstEdit" left="3pd" leftMargin="4pd" top="50pd" right="3pd" height="20pd"/>
				
				<label left="3pd" right="3pd" top="80pd" text="$SecondTurnDistAfterFirst"/>
				<edit id="SecondTurnDistAfterFirstEdit" left="4pd" leftMargin="4pd" top="95pd" right="3pd" height="20pd"/>						
			</group>	
		</group>
			
	</form>
</gui>
