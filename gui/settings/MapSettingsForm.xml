<gui>
	<!--Опции - Карта + POI(Настройки карты)-->

	<form id="MapSettingsForm" sourceId="GUIForm">
		<button sourceId="BackButton"/>
		<button text="$MapSettings" sourceId="TitleButton"/>
		<button sourceId="OKButton"/>
        <button bgPics="orangeUnderline" left="0" right="0" top="35pd" />
		<group sourceId="SettingsGroup">
			
			<group left="0pd" right="1pd" top="0pd" bgColor="Color020">				

				<button sourceId="SettingsButton" picNormal="atlas_selection" text="$AtlasSelection" command="show(MapsForm)"/>				
				<button top="0pd" right="3pd" picNormal="further" command="show(MapsForm)"/>
                
                <checkBox id="RotateCheck" sourceId="SettingsCheckBox" text="$RotateByMoving" top="40pd"/>
				<checkBox id="SmoothingCheck" sourceId="SettingsCheckBox" text="$SmoothLines" top="80pd"/>
				<checkBox id="SmoothMovingCheck" sourceId="SettingsCheckBox" text="$SmoothMoving" top="120pd"/>
				<checkBox id="RotateDamperCheck" sourceId="SettingsCheckBox" text="$RotateDamper" top="160pd"/>
				<checkBox id="BindToRoadCheck" sourceId="SettingsCheckBox" text="$BindToRoad" top="200pd"/>
				<checkBox id="CurrentGoalCheck" sourceId="SettingsCheckBox" text="$ShowCurrentGoal" top="240pd"/>
                <button left="2pd" picNormal="show_speedcam" top="290pd" />
            	<checkBox left="23pd" id="ShowSpeedCamsCheck" sourceId="SettingsCheckBox" text="$ShowSpeedCams" top="280pd"/>
                <button bgPics="blackUnderline" left="2" right="2" top="320pd" />
				<checkBox id="ShowMapZoomButtonsCheck" sourceId="SettingsCheckBox" text="$ShowMapZoomButtons [+-][▲▼]" top="320pd"/>
				<checkBox id="PredictPositionCheck" sourceId="SettingsCheckBox" text="$PredictPosition" visible="0" top="320pd"/>
				<checkBox id="AutoScaleCheck" sourceId="SettingsCheckBox" text="$AutoScale" top="360pd"/>
				<checkBox id="AutoScaleByRouteCheck" sourceId="SettingsCheckBox" text="$AutoScaleByRoute" top="400pd"/>				
			
				<!--Детализация карты-->
				<button sourceId="MenuLabel" text="$MapZoomFixSettings:" top="440pd"/>			
				<comboBox id="MapZoomFixCombo" top="450pd" right="3pd" height="20pd" width="50%">
					<dialog sourceId="ListDialog">
						<button sourceId="TitleButton" text="$POISettings"/>
                        <button bgPics="orangeUnderline" left="0" right="0" top="35pd" />
					</dialog>
				</comboBox>
				
				<!--POI на карте-->
				<button sourceId="MenuLabel" text="$POISettings:" top="480pd"/>
				<comboBox id="POIViewModeCombo" top="490pd" right="3pd" height="20pd" width="50%">
					<dialog sourceId="ListDialog">
						<button sourceId="TitleButton" text="$POISettings"/>
                        <button bgPics="orangeUnderline" left="0" right="0" top="35pd" />
					</dialog>
				</comboBox>	

				<!--Настроить фильтры-->
				<button top="520pd" right="3pd" picNormal="further"/>
				<button sourceId="SettingsButton" top="520pd" picNormal="poi" text="$AdjustFilters" command="show(POIRulesListForm)"/>
				
				<!--Треки-->
				<button top="560pd" right="3pd" picNormal="further"/>
				<button sourceId="SettingsButtonWoLine" top="560pd" picNormal="settings_track" text="$Tracks" command="show(TrackListForm)"/>
                
			</group>
			
		</group>
	</form>
</gui>
