<gui>
	
	<!-- Шаблон основного окна с картой-->
	
	<form id="MapForm" modalColor="Color230" rtl="on">
			<hotkey key="+" command="zoomIn"/>
			<hotkey key="-" command="zoomOut"/>
			<hotkey key="left" command="moveLeft"/>
			<hotkey key="right" command="moveRight"/>
			<hotkey key="up" command="moveUp"/>
			<hotkey key="down" command="moveDown"/>

			<mapWindow id="MapWindow"/>

			<!-- Нижняя панель | Panel dolny (ulica skąd jedziemy)-->
			<button id="InfoButton" left="0" right="0" bottom="0" height="18pd" leftMargin="60pd" rightMargin="60pd"
					bgColor="Color040" fontSize="FontSize310" fontColor="Color210"/>
			
			<!-- Список при нажатии на нижнюю панель -->
			<group id="InfoGroup" left="0" right="0" bottom="0" visible="0">
				<header bgColor="Color040" height="18pd" leftMargin="2pd" rightMargin="2pd" topMargin="2pd" bottomMargin="2pd"
					autoSize="1" fontSize="FontSize310" fontColor="Color210"/>
				<listBox id="List" left="0" right="0" top="0" topMargin="0" bottomMargin="0" fontSize="FontSize310" permanentItemButton="1">
					<button right="1pd" top="50%" width="35pd" height="13pd" bgColor="Color090" bgColorPressed="Color091" fontColor="Color210" text="[size=7]i[/size]"/>
				</listBox>
			</group>
			
			<!-- Кнопки + и -  -->
            		<button id="ZoomInButtonBg" sourceId="ZoomButton" right="0" bottom="65pd" picNormal="zoom_pitch_background_big" picDisabled="zoom_pitch_background_big" command="zoomIn" tags="!auto; !entireRoute; zoomButtons; !viewTrack"/>
			<button id="ZoomOutButtonBg" sourceId="ZoomButton" right="0" bottom="31pd" picNormal="zoom_pitch_background_big" picDisabled="zoom_pitch_background_big" command="zoomOut" tags="!auto; !entireRoute; zoomButtons; !viewTrack"/>
            
			<button id="ZoomInButton" sourceId="ZoomButton" right="0" bottom="65pd" picNormal="zoom_in" picDisabled="zoom_in_out" command="zoomIn" tags="!auto; !entireRoute; zoomButtons; !viewTrack"/>
			<button id="ZoomOutButton" sourceId="ZoomButton" right="0" bottom="31pd" picNormal="zoom_out" picDisabled="zoom_out_out" command="zoomOut" tags="!auto; !entireRoute; zoomButtons; !viewTrack"/>
			
		</form>	
</gui>
