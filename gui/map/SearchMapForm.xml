<gui>
<!-- Режим поиска на карте -->

	<form id="SearchMapForm" sourceId="MapForm">
		
		<button id="InfoButton" text="%cursor|%cursor" state="%entryPoints" tags="!entireRoute; !trackName; !trafficJamMode"/>
		<button id="InfoButton3" left="40pd" right="40pd" bottom="0" height="18pd" bgColor="Color040" fontSize="FontSize310" fontColor="Color210"
					text="[color=Color090]%trackNumber[/color]/%trackCount: %trackName" tags="trackName"/>
	
		<!-- верхняя панель с 'быстрыми' кнопками --->	
		<button id="InfoButton2" left="0" right="0" top="0" height="26pd" bgPics=";;;;panel;;;;"/>
		
		<!-- кнопка "Назад"-->
		<button picNormal="back" left="0" top="0" width="36pd" height="26pd" command="goBack"/>		
		
		<!-- 'Быстрые' кнопки при просмотре маршрута -->
		<group left="36pd" right="0" top="0" height="26pd" tags="!entireRoute; !trackName; !trafficJamMode">
			<button picNormal="start_point" left="5%" top="0pd" height="100%" command="setStartPoint"/>
			<button picNormal="first_goal" left="23%" top="0pd" height="100%" command="addFirstGoal"/>
			<button picNormal="add_goal_in_route" left="41%" top="0" height="100%" command="addGoalAfter(showRouteForm)"/>		
			<button picNormal="goal_before" left="59%" top="0" height="100%" command="addGoalBefore"/>
			<button picNormal="goal_after" left="77%" top="0" height="100%" command="addGoalAfter"/>
			<button picNormal="note_big" left="95%" top="0" height="100%" command="addWaypoint"/>	
		</group>

		<!-- 'Быстрые' кнопки при просмотре треков -->
		<group left="36pd" right="0" top="0" height="26pd" tags="trackName; !trafficJamMode">
			<button picNormal="del" left="7%" top="0" height="100%" command="delete"/>			
			<button picNormal="share" left="29%" top="0" height="100%" command="share" tags="trackNumber"/>
			<button picNormal="export" left="29%" top="0" height="100%" command="show(TrackRecorderExportForm)" tags="!trackNumber"/>
			<button picNormal="setting_track" left="51%" top="0" height="100%" command="showParams"/>			
			<button picNormal="to_view; to_speed; to_alt" left="73%" top="0" height="100%" state="%colorMode" command="toggleColorMode"/>
			<button picNormal="map" left="95%" top="0" height="100%" command="showMainMap"/>			
		</group>	
		
		<!-- 'Быстрые' кнопки при просмотре пробок -->
		
		<group left="36pd" right="50pd" top="2pd" height="21pd" tags="trafficJamMode" >
			<button text="[size=6]$TrafficJam1kmh[/size]|[size=FontSize140][b]$TrafficJam1kmh[/b][/size]" state="%trafficJamMode1" left="0" top="0" width="33%" height="100%" bgColor="Color310" fontColor="Color201" command="toggleTrafficJamMode(1)"/>
			<button text="[size=6]$TrafficJam5kmh[/size]|[size=FontSize140][b]$TrafficJam5kmh[/b][/size]" state="%trafficJamMode2" left="50%" top="0" width="33%" height="100%" bgColor="Color320" fontColor="Color201" command="toggleTrafficJamMode(2)"/>
			<button text="[size=6]$TrafficJam15kmh[/size]|[size=FontSize140][b]$TrafficJam15kmh[/b][/size]" state="%trafficJamMode3" right="0" top="0" width="33%" height="100%" bgColor="Color330" fontColor="Color201" command="toggleTrafficJamMode(3)"/>							
		</group>
		<button picNormal="del_all" right="0pd" top="0" width="50pd" height="26pd" command="clearTrafficJams" tags="trafficJamMode"/>
		
		<!-- Описание работы с пробками-->
		<dialog id="TrafficJamsHelp" left="0" right="0" top="0" bottom="0" bgColor="black" translucent="1">
			<group left="0" right="0" top="0" bottom="0">
					<button left="0" width="36pd" top="0" bottom="60%" bgPics="greyFrame"
							leftMargin="1pd" rightMargin="1pd" wordWrap="1" fontSize="6" fontColor="Color210" text="$Cancel"/>					
					<button left="36pd" right="50pd" top="0" bottom="60%" bgPics="greyFrame"
							leftMargin="5pd" rightMargin="5pd" wordWrap="1" fontSize="FontSize110" fontColor="Color210" text="$TrafficJamSpeedHelp"/>
					<button right="0" width="50pd" top="0" bottom="60%" bgPics="greyFrame"
							leftMargin="1pd" rightMargin="1pd" wordWrap="1" fontSize="6" fontColor="Color210" text="$ClearTrafficJamsHelp"/>					
					<button left="0" right="0" top="40%" bottom="0" bgPics="greyFrame"
							leftMargin="35pd" rightMargin="35pd" wordWrap="1" fontSize="FontSize110" fontColor="Color210" text="$TrafficJamsHelp"/>
					<button left="0" right="0" top="0" bottom="0" command="ok"/>					
			</group>
		</dialog>	
	
		<!-- кнопка "GO" -->
		<group right="0" top="26pd" width="60pd" height="55pd" bgColor="Color040" tags="!entireRoute; !trackName; !trafficJamMode">
			
            <!-- byDMA кнопка "NewGo" | kein Finish sondern Start! 
            <button left="5pd" top="0" width="40pd" height="48pd" picNormal="finish"/>
            <label right="10pd" top="30pd" width="50pd" height="15pd" fontColor="Color210" fontSize="12" text="GO"/>
            
            
            <button left="50%" top="0" width="50pd" height="48pd" picNormal="NowGo"/>
            
            -->
                       
        <group left="50%" bgPics="orangeFrame">
            <button left="50%" top="0" width="50pd" height="48pd" picNormal="NowGo"/>
            <label left="50%" top="30pd" width="50pd" height="15pd" fontColor="Color400" FontSize="FontSize130" text="$LetsGo"/>
        </group>
            
             <button left="50%" top="50%" width="100%" height="100%" command="routeToCursor"/>
		</group>
		
		<!-- кнопка "Настройка маршрута" -->
		<button right="0" top="76pd" width="60pd" height="30pd" bgColor="Color020" 
			picNormal="route_setting" command="showSearchMapRouteMenu" tags="!entireRoute; !trackName; !trafficJamMode"/>
		
		<!-- кнопка "На карту" / "Следующий трек" / "Помощь"-->
		<button right="0" bottom="0" width="60pd" height="30pd" sourceId="MainTextButton" picNormal="map" command="showMainMap" tags="!trackName; !trafficJamMode"/>
		<button right="0" bottom="0" width="60pd" height="30pd" sourceId="MainTextButton" picNormal="track_next" command="showNext" tags="trackName; !trafficJamMode"/>
		<button right="0" bottom="0" width="60pd" height="30pd" sourceId="MainTextButton" picNormal="help" command="show(TrafficJamsHelp)" tags="trafficJamMode"/>
		
		<!-- кнопка "Поиск" / "Предыдущий трек"
        byDMA Near-Points anstatt Suche
        -->
		<button left="0" bottom="0" width="60pd" height="30pd" sourceId="MainTextButton" picNormal="near_points" command="showMainMap; showNearPlaces" tags="!entireRoute; !trackName; !trafficJamMode"/>
		<button left="0" bottom="0" width="60pd" height="30pd" sourceId="MainTextButton" picNormal="track_previous" command="showPrev" tags="!entireRoute; trackName; !trafficJamMode"/>
		
		<indicator id="TurnSchemeIndicator" sourceId="TurnSchemeIndicator" visible="0"/>

		<!-- шкала высоты / скорости -->
		<indicator id="TrackColorChangeIndicator" bottom="35pd" top="45pd" left="2pd" width="40pd" borderColor="Color200" fillSize="5pd" borderWidth="2" tickLength="3pd" orientation="right" height="18pd" valueHorIndent="3pd" valueVertIndent="2pd" fontColor="Color210" fontBorderColor="Color030" fontSize="FontSize120" fontBold="0" tags="trackReady; colorMode"/>
		
		
		<label left="2pd" top="30pd" FontSize="FontSize110" bgPics="darkBackground" fontColor="Color210" leftMargin="2pd" rightMargin="2pd" text="{'$BySpeed' (%colorBySpeed); '$ByHeight'(%colorByAlt); '[picture=emptypix]'}"/>
			
		<!-- сообщение о подготовке данных... -->
		<button left="50%" top="50%" height="10%" width="50%" fontColor="Color210" fontSize="FontSize140" bgPics=";;;;zoom_pix;;;;" wordWrap="1" text="$PreparingData" tags="trackName; !trackReady"/>
		<!-- сообщение об ошибки в треках (невозможно отобразить) -->
		<button left="50%" top="50%" height="15%" width="50%" fontColor="Color210" fontSize="FontSize140" bgColor="Color080" wordWrap="1" text="$BadTrack" tags="badTrack"/>
			
		<!--- расстояние до конечной точки и время прибытия в конечную точку / осталось до прибытия в конечную точку --->
		<group left="0" top="96pd" width="60pd" height="55pd" bgColor="Color030" tags="entireRoute">
			<button left="0" top="18pd" height="36pd" picNormal="finish_small_2"/>
			<button text="%finishDistance" left="0" top="1pd" width="100%" height="19pd" 
				leftMargin="1pd" rightMargin="1pd" textPosition="center;center" autoSize="text"/>
			<button text="%finishTimeLeft" left="0" top="18pd" width="100%" height="19pd" 
				leftMargin="5pd" rightMargin="1pd" textPosition="center;center" autoSize="text" fontColor="Color220"/>
			<button text="%finishTime" left="0" top="35pd" width="100%" height="19pd" 
				leftMargin="5pd" rightMargin="1pd" textPosition="center;center" autoSize="text"/>
		</group>
		
		<!--- расстояние до промежуточной точки и время прибытия в промежуточную точку / осталось до прибытия в промежуточную точку --->
		<group left="0" top="151pd" width="60pd" height="38pd" bgColor="Color030" tags="manyGoals;entireRoute">
			<button left="0" top="2pd" height="36pd" picNormal="goal_small2"/>
			<button text="%goalDistance" left="0" top="0" width="100%" height="21pd" bgPics=";black_pix;;;;;;;" 
				leftMargin="5pd" rightMargin="1pd" topMargin="2pd" textPosition="center;center" autoSize="text"/>
			<button text="%goalTime|[color=Color220]%goalTimeLeft[/color]" left="0" top="0" width="100%" height="100%"
				leftMargin="5pd" rightMargin="1pd" topMargin="19pd" textPosition="center;center" autoSize="text"/>
		</group>
		
		<!-- настройки маршрута -->
		<menu id="SearchMapRouteMenu" left="50%" top="50%" margin="5pd" size="2" visible="0" >
			<button sourceId="QuickMenuButton2" text="$FastestRoute" picNormal="fastest_route" command="findFastestRoute"/>
			<button sourceId="QuickMenuButton2" text="$Save" picNormal="save_route" command="show(SavedRouteForm)"/>
            <button sourceId="QuickMenuButton2" text="$StraightRoute" picNormal="straight_route" command="findStraightRoute"/>
            <button sourceId="QuickMenuButton2" text="$LoadRoute" picNormal="load_route" command="show(RouteListForm)"/>
            <button sourceId="QuickMenuButton2" text="$ShortestRoute" picNormal="shortest_route" command="findShortestRoute"/>
			<button sourceId="QuickMenuButton2" text="$Cancel" picNormal="del_route" command="delRoute" />
		</menu>
		
	</form>
</gui>
