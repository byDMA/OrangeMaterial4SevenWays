<gui>
	<!--Основное окно с картой-->

	<form id="MainMapForm" sourceId="MapForm">

		<hotkey key="PgUp" command="incPitch"/>
		<hotkey key="PgDown" command="decPitch"/>
		<hotkey key="/" command="rotateAnticlockwise"/>
		<hotkey key="*" command="rotateClockwise"/>

		<!--- текст на нижней панели 	
		<button id="InfoButton" text="%currentRoadTitle|%cursor" state="%cursor"/>
        --->
        <button id="InfoButton" text="%currentRoadType %currentRoadTitle |%cursor" state="%cursor"/>
		
        <!--- cursor slice | Unterlegscheibe ;-)
        <button id="CursorSlice" picNormal="cursor_slice" bottom="21%" left="50%" tags="3D"/>--->
        <button id="CursorSlice" picNormal="cursor_slice" bottom="21%" left="50%" tags="3D; !manual"/>
		        
        <!--- верхняя панель с 'быстрыми' кнопками --->
		<button id="InfoButton2" left="0" right="0" top="0" height="26pd" bgPics=";;;;panel;;;;"/>

		<!--- 'быстрые' кнопки --->	
		<include file="gui/Panel.xml"/>

		<!--- панель со следующей улицей 
		<button left="60pd" right="60pd" top="26pd" height="18pd" bgColor="Color040" fontColor="Color210" 
				fontSize="FontSize310" text='{"%nextRoadTitle"; "%nextRoadType{" (%nextRoadDirection)"}"}' tags="route"/>
        --->
        
        <!--- zuerst das Symbol der Route aus der 7wl-Datei, dann Titel, und wenn kein Titel vorhanden, dann Richtung --->
        
       <button left="60pd" right="60pd" top="26pd" height="18pd" bgColor="Color040" fontColor="Color210" 
				fontSize="FontSize310" text='%nextRoadType {"%nextRoadTitle"; "%nextRoadDirection"}' tags="route"/>
        
            

		<!--- высота над уровнем моря--->
		<button picNormal="gps_alt" left="1pd" bottom="0" height="18pd" picPosition="left;center" tags="auto"/>
		<button left="0" bottom="0" width="60pd" height="18pd" leftMargin="13pd" text="%gpsAlt[size=8]$m[/size]" 
			fontColor="Color210" autoSize="text" textPosition="left;center" tags="auto"/>
		
		<!--- ближайший маневр и расстояние до него  fontColor="Color210"(jasnoszary na pomarańczowy) --->
		<group left="0pd" top="26pd" width="60pd" height="70pd" bgColor="Color040" tags="route">
			<indicator sourceId="TurnSchemeIndicator" left="0" top="0" width="100%" height="50pd"/>				
			<button left="0" top="0" width="100%" height="100%" topMargin="50pd" leftMargin="1pd" rightMargin="1pd" bottomMargin="1pd"
				text="%turnDistance" fontColor="Color400" autoSize="text" command="showRouteMenu"/>
		</group>
		
		<!--- второй маневр и расстояние до него--->
		<group left="60pd" top="44pd" width="40pd" height="40pd" bgPics=";;;;st_pix;;;;" tags="route; auto; secondTurn">
			<indicator sourceId="SecondTurnIndicator" left="0" top="0" width="100%" height="25pd"/>			
			<button left="0" top="0" width="100%" height="100%" topMargin="24pd" leftMargin="1pd" rightMargin="1pd" bottomMargin="1pd"
				text="%secondTurnDistAfterFirst" fontColor="Color400" autoSize="text" command="show(RouteForm)"/>
		</group>
		
		<!--- расстояние до конечной точки и время прибытия в конечную точку / осталось до прибытия в конечную точку --->
		<group left="0" top="96pd" width="60pd" height="55pd" bgColor="Color030" tags="route">
			<button left="0" top="18pd" height="36pd" picNormal="finish_small_2"/>
			<button text="%finishDistance" left="0" top="1pd" width="100%" height="19pd" 
				leftMargin="1pd" rightMargin="1pd" textPosition="center;center" autoSize="text"/>
			<button text="%finishTimeLeft" left="0" top="18pd" width="100%" height="19pd" 
				leftMargin="5pd" rightMargin="1pd" textPosition="center;center" autoSize="text" fontColor="Color220"/>
			<button text="%finishTime" left="0" top="35pd" width="100%" height="19pd" 
				leftMargin="5pd" rightMargin="1pd" textPosition="center;center" autoSize="text"/>
		</group>
		
		<!--- расстояние до промежуточной точки и время прибытия в промежуточную точку / осталось до прибытия в промежуточную точку --->
		<group left="0" top="151pd" width="60pd" height="38pd" bgColor="Color030" tags="manyGoals">
			<button left="0" top="2pd" height="36pd" picNormal="goal_small2"/>
			<button text="%goalDistance" left="0" top="0" width="100%" height="21pd" bgPics=";black_pix;;;;;;;" 
				leftMargin="5pd" rightMargin="1pd" topMargin="2pd" textPosition="center;center" autoSize="text"/>
			<button text="%goalTime|[color=Color220]%goalTimeLeft[/color]" left="0" top="0" width="100%" height="100%"
				leftMargin="5pd" rightMargin="1pd" topMargin="19pd" textPosition="center;center" autoSize="text"/>
		</group>
		
		<!--- текущая скорость --->
		<group right="0" top="26pd" width="60pd" height="32pd" bgColor="Color040">
			
            <button width="100%" height="100%" bgColor="Color080" tags="speedLimitState"/>
            <button text="%currentSpeed" width="100%" height="100%" 
				fontColor="Color210" autoSize="text" textPosition="center;center" left="5pd" command="showQuickMenu"/>		
		</group>
		
        <group top="37pd" right="44pd" width="12pd" height="12pd">
		<button id="speed" picNormal="speed" />
		</group>
		<!--- спидкам и расстояние до него  --->
		<group right="0" top="59pd" width="60pd" height="70pd" tags="speedcam; auto">
			<indicator sourceId="SpeedCamIndicator" top="0" width="100%" height="52pd"/>
			<button sourceId="WhiteFrameIndicator" text="%speedCamDistance" bottom="0" width="100%" height="18pd"/>
		</group>
        
        <!--- изменение скорости и расстояние до него--->
		<group right="0" top="130pd" width="60pd" height="70pd" tags="nextSpeedLimit; auto">
			<button picNormal="speedcam101" top="0" width="100%" height="52pd" 
				text="{'%nextSpeedLimit'; '--'}" layout="center" fontColor="Color040" fontSize="FontSize320"/>
			<button sourceId="WhiteFrameIndicator" text="%nextSpeedLimitDist" bottom="0" width="100%" height="18pd"/>
		</group>		
		
		<!--- текущее ограничение скорости--->
		<button picNormal="speedcam101_1" right="50pd" top="40pd" width="36pd" height="36pd"
			text="%speedLimit" layout="center" fontColor="black" fontSize="11" tags="speedLimit; auto"/>

		<!--- предупреждение о наличии обновлений --->
		<button right="3pd" bottom="0" picNormal="addon_update_small" command="show(LocalAddonsForm)" tags="%addonsUpdate; auto"/>
		<button right="63pd" bottom="0" picNormal="addon_update_small" command="show(LocalAddonsForm)" tags="%addonsUpdate; !auto"/>
		
		<!--- кнопки наклона карты 
        <button id="IncPitchButton" sourceId="PitchButton" right="0" bottom="99pd" picNormal="pitch_dec" command="incPitch" tags="!auto; 3D; zoomButtons"/>
		<button id="DecPitchButton" sourceId="PitchButton" right="30pd" bottom="99pd" picNormal="pitch_inc" command="decPitch" tags="!auto; 3D; zoomButtons"/>
        
        --->		
        <button id="IncPitchButtonBg" sourceId="PitchButton" right="0" bottom="99pd" picNormal="zoom_pitch_background" picDisabled="zoom_pitch_background" command="incPitch" tags="!auto; 3D; zoomButtons"/>
		<button id="DecPitchButtonBg" sourceId="PitchButton" right="30pd" bottom="99pd" picNormal="zoom_pitch_background" picDisabled="zoom_pitch_background" command="decPitch" tags="!auto; 3D; zoomButtons"/>
        
		<button id="IncPitchButton" sourceId="PitchButton" right="0" bottom="99pd" picNormal="pitch_dec" picDisabled="pitch_dec_d" command="incPitch" tags="!auto; 3D; zoomButtons"/>
		<button id="DecPitchButton" sourceId="PitchButton" right="30pd" bottom="99pd" picNormal="pitch_inc" picDisabled="pitch_inc_d" command="decPitch" tags="!auto; 3D; zoomButtons"/>

		<!--- кнопка "Режим поиска на карте" --->		
		<button right="0" top="58pd" width="60pd" height="32pd" picNormal="route_menu" 
				bgColor="Color020" bgColorPressed="Color021" command="showCursorMap" tags="!auto"/>

		<!--- кнопки Поиск и Меню --->
		<button sourceId="MainTextButton"  left="0" bottom="0" width="60pd" picNormal="search_small" command="show(SearchForm)" tags="!auto"/>
		<button sourceId="MainTextButton"  right="0" bottom="0" width="60pd" picNormal="menu_tiles" command="show(MainForm)" tags="!auto"/>
		
		<!--- центровать на машинке 
        
        <button id="MapGotoGPSButton" right="50%" bottom="25pd" width="35pd" height="35pd"
			picNormal="goto_gps" bgPics=";;;;st_pix;;;;" bgPicsPressed=";;;;zoom_pix;;;;" tags="gps; manual"/>
        runder Hintergrund
        --->
		<button id="MapGotoGPSButtonBg" right="50%" bottom="25pd" width="35pd" height="35pd"
			picNormal="zoom_pitch_background_big" bgPics="" bgPicsPressed="" tags="gps; manual"/>
        <button id="MapGotoGPSButton" right="50%" bottom="25pd" width="35pd" height="35pd"
			picNormal="goto_gps" bgPics="" bgPicsPressed="" tags="gps; manual"/>
        
        
        
		
		<!--- движение по полосам --->
		<indicator id="LanesIndicator" left="50%" bottom="18pd" sourceId="BlueFrameIndicator; LanesIndicator" tags="lanes; auto"/>
		
		       
        <!--- быстрое меню (кнопка скорости)
        
        zu wenig Platz
        <button sourceId="QuickMenuButton" text="$AtlasSelection" picNormal="atlas_selection" command="show(MapsForm)"/>
        
        Vertikal
        <menu id="MapQuickMenu" orientation="vert" size="1" visible="0" bgPics="greyFrame">		
            <button sourceId="QuickMenuCaption" text="$MapSettings" bgPics="grey_pix;grey_pix;grey_pix;;;;orange_pix;orange_pix;orange_pix"/>
			<button sourceId="QuickMenuButton" text="$SpeedcamSelection" picNormal="speedcam_selection" command="show(SpeedcamsForm)"/>			
			<button sourceId="QuickMenuButton" text="$Filter" picNormal="poi" command="show(POIRulesListForm)"/>
			<checkBox id="QuickMenu3DCheck" text="3D|2D" picChecked="3d" picUnchecked="3d" sourceId="QuickMenuToggle" command="toggle3D"/>
			<button sourceId="QuickMenuButton" text="$HUD" picNormal="hud" command="toggleHUD"/>
			<button sourceId="QuickMenuButton" text="$Dashboard" picNormal="dashboard" command="show(DashboardForm)"/>
			<button sourceId="QuickMenuButton" text="$SpecifyTrafficJams" picNormal="ToggleTraffic" command="toggleTrafficJamMode"/>
		</menu>              
        
        --->
        
        <!--- Horizontal --->	
        
		<menu id="MapQuickMenu" size="2" left="50%" top="50%" margin="5pd" visible="0" >
			
            <checkBox id="QuickMenu3DCheck" sourceId="QuickMenuToggle2" text="3D|2D" autoSize="text" picChecked="3d" picUnchecked="3d" command="toggle3D"  />
            <button sourceId="QuickMenuButton2" text="$HUD" autoSize="text" picNormal="hud" picPressed="hud" command="toggleHUD"/>
			<button sourceId="QuickMenuButton2" text="$Dashboard" autoSize="text" picNormal="dashboard" command="show(DashboardForm)"/>
			<button sourceId="QuickMenuButton2" text="$Filter" wordWrap="0" autoSize="text" picNormal="poi" command="show(POIRulesListForm)"/>
			<button sourceId="QuickMenuButton2" text="$SpeedcamSelection" autoSize="text" picNormal="speedcam_selection" command="show(SpeedcamsForm)"/>
			<button sourceId="QuickMenuButton2" text="$AtlasSelection" autoSize="text" picNormal="atlas_selection" command="show(MapsForm)"/>
			<button sourceId="QuickMenuButton2" text="$SpecifyTrafficJams" autoSize="text" picNormal="ToggleTraffic" command="toggleTrafficJamMode"/>
            <if os="Android; iOS ;RT">
					<button sourceId="QuickMenuButton2" text="$AllAddons" picNormal="maps_repo" command="show(AddonsListForm, map)" id="AddPathButton"/>
			</if>
                <ifnot os="Android; iOS; RT">
					<button sourceId="QuickMenuButton2" text="$MapsPath" picNormal="maps_local" command="show(ContentPathsForm)"/>
				</ifnot>
                                 
		</menu>

		<!--- меню маршрута (кнопка маневра) 
        <menu id="MapRouteMenu" orientation="vert" size="1" visible="0" bgPics="greyFrame" >	
			
            <button sourceId="QuickMenuCaption" text="$Route" bgPics="grey_pix;grey_pix;grey_pix;;;;orange_pix;orange_pix;orange_pix"/>
            <button sourceId="QuickMenuButton" text="$Cancel" picNormal="del_route" command="delRoute" />
			<button sourceId="QuickMenuButton" text="$Edit" picNormal="route_info" command="show(RouteForm)"/>
			<button sourceId="QuickMenuButton" text="$Save" picNormal="save_route" command="show(SavedRouteForm)"/>
			<button sourceId="QuickMenuButton" text="$SkipGoal" picNormal="skip_goal" command="skipGoal"/>			
			<button sourceId="QuickMenuButton" text="$ShowEntireRouteButton"" picNormal="show_route" command="showEntireRoute"/>
			<checkBox id="RouteMenuSimulationCheck" text="$Simulation" picUnchecked="simulation" picChecked="simulation_off" sourceId="QuickMenuToggle" command="toggleSimulation"/>
		</menu>	
        
        --->		
		<menu id="MapRouteMenu" size="2" left="50%" top="50%" margin="5pd" visible="0">
		

			<button sourceId="QuickMenuButton2" text="$Cancel" autoSize="text" picNormal="del_route" command="delRoute"/>			
            <button sourceId="QuickMenuButton2" text="$Edit" autoSize="text" picNormal="route_info" command="show(RouteForm)"/>
			<button sourceId="QuickMenuButton2" text="$SkipGoal" autoSize="text" picNormal="skip_goal" command="skipGoal"/>
			<button sourceId="QuickMenuButton2" text="$Save" autoSize="text" picNormal="save_route" command="show(SavedRouteForm)"/>
			<button sourceId="QuickMenuButton2" text="$ShowEntireRouteButton" autoSize="text" picNormal="show_route" command="showEntireRoute"/>
			<button sourceId="QuickMenuButton2" text="$LoadRouteQM" autoSize="text" picNormal="load_route" command="show(RouteListForm)"/>
			<checkBox id="RouteMenuSimulationCheck" sourceId="QuickMenuToggle2" autoSize="text" command="toggleSimulation" text="$Simulation|$Simulation"
					picUnchecked="simulation" picChecked="simulation_off"/>
            
            <!--- button "fuel" in quick menu              
            --->
            
            <group >
                    <button sourceId="QuickMenuButton2" text="FUEL" picNormal="route_next_fuel" command="show(SearchPlaceForm);writePlaceTag" />
                    <label id="Text" text="$Fuel" fontSize="FontSize110" bgColor="Color020" fontColor="Color210" top="60pd" bottom="3pd"  width="80pd" height="20pd" leftMargin="5pd" rightMargin="5pd" bottomMargin="5pd" topMargin="5pd" />
            </group>          

		</menu>	
        
        <button left="0" right="0" top="0" bottom="0" command="toggleHUD(0)" tags="hud"/>
   
	</form>
</gui>
