<gui>
	<!---панель приборов 2 (дополнительная) --->
	
	<form id="DashboardForm2" bgColor="black">

		<!--- текущая скорость --->
		<group left="60pd" right="60pd" top="26pd" bottom="19pd">
            <button text="%currentSpeed" width="100%" height="100%" top="60%" fontColor="Color210" fontSize="100" autoSize="text" tags="!speedLimitState"/>
			<button text="%currentSpeed" width="100%" height="100%" top="60%" fontColor="Color210" bgColor="Color080" fontSize="100" autoSize="text" tags="speedLimitState"/>
            <!--- текущее время<indicator sourceId="BaseTimeIndicator" left="55pd" right="55pd" top="0" width="100%" height="50pd"
			leftMargin="0pd" topMargin="0pd" bottomMargin="0pd" autoSize="text" fontSize="30" fontColor="Color210" textPosition="center;center" />  --->
		</group>

		<!--- текущее время  --->
        <indicator sourceId="BaseTimeIndicator" left="0" top="0pd" width="50pd" height="26pd"
			leftMargin="3pd" topMargin="2pd" bottomMargin="2pd" autoSize="text" fontColor="Color210" textPosition="center;center" command="goBack"/> 
       
		  
	
		<!--- панель со следующей улицей --->
		<button left="60pd" right="60pd" top="0" height="26pd" fontColor="Color210"
			fontSize="FontSize310" text='%nextRoadType {"%nextRoadTitle"; "%nextRoadDirection"}' tags="route"/>
		<!--- Bateria Батарея | GPS --->
        <indicator id="BatteryIndicator" picNormal="battery_0; battery_40; battery_70; battery_100; battery_ch" state="%battery" right="2pd" top="0pd" height="26pd" command="show(TrackComputerForm)"/>
        <button id="MapGPSState" picNormal="gps_off; gps_off; gps_bad; gps_valid" top="0pd" right="18pd" height="26pd" state="%gpsState" />
		
        <!--- нижняя строка --->
		<button left="60pd" right="60pd" bottom="0" height="18pd" fontColor="Color210"
			fontSize="FontSize310" text="%currentRoadType %currentRoadTitle |%cursor" />

		<!--- ближайший маневр и расстояние до него --->
		<group left="0pd" top="26pd" width="60pd" height="70pd" tags="route">
			<indicator sourceId="TurnSchemeIndicator" left="0" top="0" width="100%" height="50pd"/>				
			<button left="0" top="0" width="100%" height="100%" topMargin="50pd" leftMargin="1pd" rightMargin="1pd" bottomMargin="1pd"
				text="%turnDistance" fontColor="Color400" autoSize="text"/>
		</group>
		
		<!--- второй маневр и расстояние до него --->
		<group left="63pd" top="28pd" width="40pd" height="40pd" tags="route; auto; secondTurn">
			<indicator sourceId="SecondTurnIndicator" left="0" top="0" width="100%" height="25pd"/>			
			<button left="0" top="0" width="100%" height="100%" topMargin="24pd" leftMargin="1pd" rightMargin="1pd" bottomMargin="1pd"
				text="%secondTurnDistAfterFirst" fontColor="Color400" autoSize="text"/>
		</group>
		
		<!--- расстояние до конечной точки и время прибытия в конечную точку / осталось до прибытия в конечную точку --->
		<group left="0" top="96pd" width="60pd" height="55pd" tags="route">
			<button left="0" top="18pd" height="36pd" picNormal="finish_small_2"/>
			<button text="%finishDistance" left="0" top="1pd" width="100%" height="19pd" 
				leftMargin="1pd" rightMargin="1pd" fontColor="Color210" textPosition="center;center" autoSize="text"/>
			<button text="%finishTimeLeft" left="0" top="18pd" width="100%" height="19pd" 
				leftMargin="5pd" rightMargin="1pd" fontColor="Color070" textPosition="center;center" autoSize="text"/>
			<button text="%finishTime" left="0" top="35pd" width="100%" height="19pd" 
				leftMargin="5pd" rightMargin="1pd" fontColor="Color210" textPosition="center;center" autoSize="text"/>
		</group>
		
		<!--- расстояние до промежуточной точки и время прибытия в промежуточную точку / осталось до прибытия в промежуточную точку--->
		<group left="0" top="151pd" width="60pd" height="38pd" tags="manyGoals">
			<button left="0" top="2pd" height="36pd" picNormal="goal_small2"/>
			<button text="%goalDistance" left="0" top="0" width="100%" height="21pd"
				leftMargin="5pd" rightMargin="1pd" topMargin="2pd" fontColor="Color210" textPosition="center;center" autoSize="text"/>
			<button text="%goalTime|[color=Color121]%goalTimeLeft[/color]" left="0" top="0" width="100%" height="100%"
				leftMargin="5pd" rightMargin="1pd" topMargin="19pd" fontColor="Color210" textPosition="center;center" autoSize="text"/>
		</group>
		
		<!--- высота над уровнем моря--->
		<button picNormal="gps_alt" left="1pd" bottom="0" height="18pd" picPosition="left;center"/>
		<button left="0" bottom="0" width="60pd" height="18pd" leftMargin="13pd" text="%gpsAlt[size=8]$m[/size]" 
			fontColor="Color210" autoSize="text" textPosition="left;center"/>

		<!--- текущее ограничение скорости --->
		<button picNormal="speedcam101" right="62pd" top="28pd" width="52pd" tags="speedLimit; auto"
			text="%speedLimit" layout="center" fontColor="black" fontSize="FontSize320"/>

		<!--- спидкам и расстояние до него  --->
		<group right="0" top="28pd" width="60pd" height="70pd" tags="speedcam; auto">
			<indicator sourceId="SpeedCamIndicator" top="0" width="100%" height="52pd"/>
			<button text="%speedCamDistance" bottom="0" width="100%" height="18pd" leftMargin="1pd" rightMargin="1pd" fontColor="Color210" autoSize="text"/>
		</group>

		<!--- изменение скорости и расстояние до него--->
		<group right="0" top="100pd" width="60pd" height="70pd" tags="nextSpeedLimit; auto">
			<button picNormal="speedcam101" top="0" width="100%" height="52pd" 
				text="{'%nextSpeedLimit'; '--'}" layout="center" fontColor="black" fontSize="FontSize320"/>
			<button text="%nextSpeedLimitDist" bottom="0" width="100%" height="18pd" leftMargin="1pd" rightMargin="1pd" fontColor="Color210" autoSize="text"/>
		</group>
		
		<!--- движение по полосам --->
		<indicator id="LanesIndicator" left="50%" bottom="20pd" sourceId="LanesIndicator" tags="lanes; auto"/>
		
		<!--- линии --->
		<button bgColor="Color121" left="2pd" right="2pd" top="25pd" height="1pd"/>
		<button bgColor="Color121" left="2pd" right="2pd" bottom="18pd" height="1pd"/>
		<button bgColor="Color121" left="2pd" top="95pd" width="56pd" height="1pd" />
		<button bgColor="Color121" left="2pd" top="151pd" width="56pd" height="1pd" tags="route"/>
		<button bgColor="Color121" left="2pd" top="190pd" width="56pd" height="1pd" tags="manyGoals"/>
		<button bgColor="Color121" left="60pd" top="28pd" bottom="21pd" width="1pd"/>
		<button bgColor="Color121" right="60pd" top="28pd" bottom="21pd" width="1pd"/>

		<button left="60pd" top="0" width="100%" height="100%" command="toggleHUD(0); show(DashboardMenu)"/>
		
		<dialog id="DashboardMenu" left="50%" top="50%">
			<button sourceId="QuickMenuCaption" top="0" text="$Dashboard" bgPics="orangeUnderline" command="show(DashboardForm2);show(DashboardForm2);goBack"/>
			<button sourceId="QuickMenuButton" top="30pd" bgColor="Color010" bgColorPressed="Color021" text="$HUD" picNormal="hud" command="toggleHUD; goBack"/>
			<button sourceId="QuickMenuButton" top="60pd" bgColor="Color010" bgColorPressed="Color021" text="$Dashboard 1" picNormal="dashboard" command="goBack; goBack; show(DashboardForm)"/>
			<button sourceId="QuickMenuButton" top="90pd" bgColor="Color010" bgColorPressed="Color021" text="$Close" picNormal="close" command="goBack; goBack"/>
		</dialog>
        
	</form>
</gui>
